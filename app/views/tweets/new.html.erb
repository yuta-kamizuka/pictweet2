<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "Nickname" %> 
      <%#text_fieldは一行のテキスト投稿フォーム %>
      <%# placeholderは最初からtextを表示させておく。書くと消える。ニックネームを書いてほしいから先に書いてる%>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "text", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>
